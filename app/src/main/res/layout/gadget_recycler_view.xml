<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/frame_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/product_bg"
            android:layout_width="221dp"
            android:layout_height="320dp"
            android:adjustViewBounds="false"
            android:scaleType="fitXY"
            android:src="@mipmap/rectangle5_nine"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/product_img"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="-40dp"
            android:adjustViewBounds="false"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/product_content_img"
            android:layout_width="88dp"
            android:layout_height="60dp"
            android:layout_gravity="top|right"
            android:layout_marginRight="17dp"
            android:layout_marginTop="3dp"
            android:adjustViewBounds="false"
            android:scaleType="fitXY"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/product_content_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="25dp"
            android:layout_marginTop="7dp"
            android:text="TextView"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/product_shadow"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="37dp"
            android:adjustViewBounds="false"
            android:src="@mipmap/shadow"
            android:visibility="visible" />

        <TextView
            android:id="@+id/product_name"
            android:layout_width="187dp"
            android:layout_height="271dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="3dp"
            android:gravity="bottom|center"
            android:paddingBottom="31dp"
            android:textColor="#484848"
            android:textSize="19sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/product_price"
            android:layout_width="187dp"
            android:layout_height="275dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="3dp"
            android:gravity="bottom|center"
            android:textColor="#8bc53e"
            android:textSize="30sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/product_viewing"
            android:layout_width="187dp"
            android:layout_height="285dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="4dp"
            android:background="@mipmap/viewing_fade"
            android:gravity="center"
            android:letterSpacing="0.025"
            android:text="Viewing"
            android:textColor="#4c5658"
            android:textSize="24sp"
            android:visibility="invisible" />

    </FrameLayout>
</LinearLayout>